# Application Settings
LOG_LEVEL=INFO
# Format for log filenames (strftime format)
LOG_FILE_FORMAT=training_%Y%m%d_%H%M%S.log

# Paths
DATA_PATH=data/dataset_cleaned-positive-negative-v2.csv
MODELS_DIR=models
RESULTS_DIR=results
LOGS_DIR=logs

# Model Parameters
TEST_SIZE=0.2
RANDOM_STATE=42
SCORING=f1_weighted

# TF-IDF Parameters
MAX_FEATURES=20000
NGRAM_RANGE=1,3

# SMOTE (set to True to enable)
USE_SMOTE=False
SMOTE_RATIO=0.5

# Model Saving
SAVE_MODEL=True
MODEL_FILENAME=best_model.pkl

# Evaluation
SAVE_RESULTS=True
RESULTS_FILENAME=results.json
CONFUSION_MATRIX_FILENAME=confusion_matrix.png
ROC_CURVE_FILENAME=roc_curve.png
